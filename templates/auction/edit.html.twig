

{% block title %}Edit Auction{% endblock %}

{% block stylesheets %}
    <style>
        /* Custom CSS for Edit Auction page */
        .edit-auction-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .edit-auction-title {
            text-align: center;
            margin-bottom: 30px;
        }

        .edit-auction-back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            text-decoration: none;
            color: #007bff;
        }

        .edit-auction-form {
            margin-bottom: 40px;
        }

        .edit-auction-submit-btn {
            display: block;
            width: 100%;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .edit-auction-submit-btn:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="edit-auction-container">
            <h1 class="edit-auction-title">Edit Auction</h1>

            <div class="edit-auction-form">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="edit-auction-submit-btn">Update</button>
                {{ form_end(form) }}
            </div>

            <a href="{{ path('app_auction_index') }}" class="edit-auction-back-link">Back to List</a>
        </div>
    </div>
{% endblock %}
